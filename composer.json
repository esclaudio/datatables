{
    "name": "esclaudio/datatables",
    "description": "Simple server side processing for datatables",
    "require": {
        "php": "^7.2 || ^8.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Claudio Escobar",
            "email": "claudioe0407@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
          "Esclaudio\\Datatables\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Esclaudio\\Datatables\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "mockery/mockery": "1.3.x-dev",
        "friendsofphp/php-cs-fixer": "dev-master"
    }
}
